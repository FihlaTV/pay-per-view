<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nullhammer.android.viewersurvey" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:versionCode="5"
        android:versionName="1.5"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ViewerNumberActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewerInfoActivity"
            android:label="@string/title_activity_viewer_number" >
        </activity>
        <activity
            android:name=".VideoActivity"
            android:label="@string/title_activity_video" >
        </activity>
        <activity
            android:name=".SurveyActivity"
            android:label="@string/title_activity_survey" >
        </activity>
        <activity
            android:name=".ThankYouActivity"
            android:label="@string/title_activity_thank_you" >
        </activity>
        <activity
            android:name=".AdminActivity"
            android:label="@string/title_activity_admin" >
        </activity>
        <activity
            android:name=".DataUploadActivity"
            android:label="@string/title_activity_data_upload" >
        </activity>
    </application>

</manifest>
