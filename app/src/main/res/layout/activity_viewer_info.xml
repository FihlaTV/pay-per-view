<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nullhammer.android.viewersurvey.ViewerNumberActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/viewer_info_salutation"
            android:id="@+id/viewerSalutation"
            style="@style/TitleText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/viewer_info_question"
            android:id="@+id/viewerInfoQuestion"
            android:layout_alignBaseline="@id/viewerSalutation"
            android:layout_toRightOf="@id/viewerSalutation"
            style="@style/TitleText" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:inputType="textVisiblePassword|textNoSuggestions"
            android:ems="16"
            android:hint="@string/name"
            android:id="@+id/nameEditText"
            android:textSize="48sp"
            android:textIsSelectable="false" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:inputType="textEmailAddress|textNoSuggestions"
            android:ems="16"
            android:hint="@string/email"
            android:id="@+id/emailEditText"
            android:textSize="48sp"
            android:textIsSelectable="false" />

        <Button
            style="@style/okButton"
            android:text="@string/okButton"
            android:id="@+id/okButton"
            android:onClick="okButtonHandler" />

    </LinearLayout>

</RelativeLayout>
