<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowAnimationStyle">@null</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="TitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:textSize">62sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ViewerNumberOption">
        <item name="android:textSize">100sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">30dp</item>
        <item name="android:layout_margin">30dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:background">@drawable/button_lg_deselected</item>
    </style>
    <style name="LanguageSelector">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginBottom">72dp</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/button_lg_deselected</item>
    </style>
    <style name="SurveyOption">
        <item name="android:textSize">62sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_med_deselected</item>
    </style>
    <style name="okButton">
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">125dp</item>
        <item name="android:textSize">48sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_sm_deselected</item>
    </style>
    <style name="AdminButton">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">500dp</item>
        <item name="android:textSize">48sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="TableCell">
        <item name="android:textSize">32sp</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>
